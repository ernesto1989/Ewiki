<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TOPIC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <%- include('imports.ejs') %>
    <script>
        var simplemde;

        $("document").ready(()=>{
            simplemde =new SimpleMDE({
                element: $("#MyID")[0],
                toolbar: false,
                initialValue: "<%=content%>"
            });
            simplemde.togglePreview();
            
        });

        // actiate preview mode
        
        
    </script>
    <style>

        .markdown-preview > .CodeMirror,
        .markdown-preview > .CodeMirror > .editor-preview {
            background-color: transparent;
            padding: 0;
        }

        .markdown-preview > .CodeMirror > .editor-preview {
            display: contents;
        }

        .markdown-preview > .CodeMirror > .CodeMirror-scroll {
            display: none;
        }

        .markdown-preview > .editor-toolbar {
            display: none !important;
        }
        .markdown-preview > .editor-statusbar {
            display: none !important;
        }

    </style>
</head>
<body>
    <div class="container-fluid">
        <%- include('nav.ejs') %>
        
        <div class="container-fluid" id="md-container">
            <textarea id="MyId">
                HERE
            </textarea>
        </div>
    </div>
    
</body>
</html>